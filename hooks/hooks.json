{
  "description": "Claude Reflect hooks - auto-register current project on session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/register-project.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
